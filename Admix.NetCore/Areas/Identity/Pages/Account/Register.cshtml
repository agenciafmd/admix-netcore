@page
@model RegisterModel

@{

}

<section class="content">
    <div class="container-fluid ">
        <div class="row justify-content-center" style="padding-top: 50px">
            <!-- left column -->
            <div class="col-md-6">

                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Criar Usuário</h3>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="card-body">

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-4 col-form-label">Ativo</label>
                                <div class="col-sm-8">
                                    <select asp-for="Input.Status" class="form-control">
                                        <option value="true">Sim</option>
                                        <option value="false">Não</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-4 col-form-label">Nome</label>
                                <div class="col-sm-8">
                                    <input asp-for="Input.Nome" class="form-control"/>
                                    <span asp-validation-for="Input.Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-4 col-form-label">Email</label>
                                <div class="col-sm-8">
                                    <input asp-for="Input.Email" class="form-control"/>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-4 col-form-label">Senha</label>
                                <div class="col-sm-8">
                                    <input asp-for="Input.Password" class="form-control"/>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-4 col-form-label">Confirmação de senha</label>
                                <div class="col-sm-8">
                                    <input asp-for="Input.ConfirmPassword" class="form-control"/>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-4 col-form-label">Grupo</label>
                                <div class="col-sm-8">
                                    <select asp-for="Input.Grupo" class="form-control">
                                        <option value="1">Administrador</option>
                                        <option value="2">Comum</option>
                                    </select>
                                    <span asp-validation-for="Input.Grupo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a asp-controller="Usuarios" asp-action="Index" class="btn btn-default">Voltar</a>
                            <button type="submit" class="btn btn-info float-right">Salvar</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div><!--card card-info-->
            </div>
        </div>
    </div>
</section>
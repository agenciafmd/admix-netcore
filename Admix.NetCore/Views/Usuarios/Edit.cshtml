@model ApplicationUser


<section class="content">
    <div class="container-fluid ">
        <div class="row justify-content-center" style="padding-top: 50px">
            <!-- left column -->
            <div class="col-md-6">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Editar Usuário</h3>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post">
                        <div class="card-body">
                            <input asp-for="Id" type="hidden"/>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Ativo</label>
                                <div class="col-sm-8 col-form-label">
                                    <select asp-for="Status" class="form-control">
                                        <option value="true">Sim</option>
                                        <option value="false">Não</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Nome</label>
                                <div class="col-sm-8 col-form-label">
                                    <input asp-for="UserName" class="form-control"/>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Email</label>
                                <div class="col-sm-8 col-form-label">
                                    <input asp-for="Email" class="form-control"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Senha</label>
                                <div class="col-sm-8 col-form-label">
                                    <input type="password" asp-for="Senha" class="form-control"/>
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Confirmação de senha</label>
                                <div class="col-sm-8 col-form-label">
                                    <input type="password" asp-for="ConfirmarSenha" class="form-control"/>
                                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Grupo</label>
                                <div class="col-sm-8 col-form-label">
                                    <select asp-for="Grupo" class="form-control">
                                        <option value="1">Administrador</option>
                                        <option value="2">Comum</option>
                                    </select>
                                    <span asp-validation-for="Grupo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <a asp-action="Index" type="submit" class="btn btn-default">Voltar</a>
                            <input value="Salvar" type="submit" class="btn btn-info float-right"/>
                        </div>
                        <!-- /.card-footer -->

                    </form>
                </div><!--card card-info-->
            </div>
        </div>
    </div>
</section>
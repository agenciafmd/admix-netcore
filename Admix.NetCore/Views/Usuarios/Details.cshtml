@model ApplicationUser

<section class="content">
    <div class="container-fluid ">
        <div class="row justify-content-center" style="padding-top: 50px">
            <!-- left column -->
            <div class="col-md-6">

                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Visualizar Usuário</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Ativo</label>
                            <div class="col-sm-8 col-form-label">
                                @if (Model.Status)
                                {
                                    <span>Sim</span>
                                }
                                else
                                {
                                    <span>Não</span>
                                }
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Nome</label>
                            <div class="col-sm-8 col-form-label">
                                @Html.DisplayFor(model => model.UserName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-8 col-form-label">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Grupo</label>
                            <div class="col-sm-8 col-form-label">
                                @Html.DisplayFor(model => model.Grupo)
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <a asp-action="Index" class="btn btn-default">Voltar</a>
                    </div>
                    <!-- /.card-footer -->

                </div><!--card card-info-->
            </div>
        </div>
    </div>
</section>